<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/photo_details_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grey_1000"
	android:clickable="true">

	<ImageView
		android:id="@+id/photo_thumbnail"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerInParent="true"
		android:adjustViewBounds="true"
		android:alpha="0.33"
		android:scaleType="centerCrop" />

	<ImageView
		android:id="@+id/photo"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerInParent="true"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter" />


	<RelativeLayout
		android:id="@+id/info_container"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		>

		<TextView
			android:id="@+id/photo_title"
			style="@style/PhotoCaption"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentBottom="true"
			android:text="luis gonzalez" />

		<LinearLayout
			android:id="@+id/photo_favorites_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/photo_favorites_icon"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:adjustViewBounds="true"
				android:padding="15dp"
				android:src="@drawable/star_yellow" />

			<TextView
				android:id="@+id/photo_favorites"
				style="@style/PhotoCaption"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="20" />

		</LinearLayout>


	</RelativeLayout>


</RelativeLayout>